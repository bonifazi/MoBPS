population <- creating.diploid(nsnp=10000, nindi=50, chr.nr=5, 
                               chromosome.length = 1, name.cohort="Founder")

population <- creating.trait(population, n.additive = 25, n.dominant = 5)

population <- breeding.diploid(population, heritability = 0.5, new.bv.observation = "all")

population <- breeding.diploid(population, bve=TRUE, bve.gen=1)
population <- breeding.diploid(population, breeding.size = 50, selection.size = c(5,10),
                               selection.m = "function", 
                               selection.m.cohorts = "Founder_M",
                               selection.f.cohorts = "Founder_F")
